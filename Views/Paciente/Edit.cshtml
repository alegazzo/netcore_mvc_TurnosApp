@model Turnos.Models.Paciente

<h3>
    Editar Paciente
</h3>

<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="IdPaciente"> @*esto sirve para pasar el id, en este input se guarda*@
        <div>
            <div>
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" /> @*pero en estos input se inserta el dato para luego enviarlo.*@
                <span asp-validation-for="Nombre"></span>
            </div>
            <div>
                <label asp-for="Apellido"></label>
                <input asp-for="Apellido" />
                <span asp-validation-for="Apellido"></span>
            </div>
            <div>
                <label asp-for="Direccion"></label>
                <input asp-for="Direccion" />
                <span asp-validation-for="Direccion"></span>
            </div>
            <div>
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" />
                <span asp-validation-for="Telefono"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div>
            <input type="submit" value="Editar" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Volver</a>
</div>